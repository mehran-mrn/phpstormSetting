<templateSet group="user">
  <template name="fp" value="&lt;!-- new post form --&gt;&#10;&lt;form action=&quot;POST&quot; class=&quot;form&quot; action=&quot;{{route('$routeName$')}}&quot;&gt;&#10;    @csrf&#10;        $end$&#10;&lt;/form&gt;" description="postform" toReformat="true" toShortenFQNames="true">
    <variable name="routeName" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="end" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="it" value="&lt;!-- $commentName$ text input --&gt;&#10;&lt;div class=&quot;form-group $class$&quot; &gt;&#10;            &lt;label for=&quot;$id$&quot;&gt;{{__('static.admin.address')}} &lt;span class=&quot;text-danger&quot;&gt;*&lt;/span&gt;&lt;/label&gt;&#10;            &lt;input type=&quot;text&quot; class=&quot;form-control&quot; name=&quot;$name$&quot; id=&quot;$id$&quot; value=&quot;$value$&quot;&gt;&#10;&lt;/div&gt;&#10;&#10;$end$" description="input text" toReformat="true" toShortenFQNames="true">
    <variable name="class" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="name" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="value" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="commentName" expression="name" defaultValue="" alwaysStopAt="false" />
    <variable name="id" expression="capitalize(name)" defaultValue="" alwaysStopAt="false" />
    <variable name="end" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
    </context>
  </template>
  <template name="rw" value="&lt;!-- row --&gt;&#10;    &lt;div class=&quot;row&quot;&gt;&#10;        $input$&#10;    &lt;/div&gt;" description="row" toReformat="true" toShortenFQNames="true">
    <variable name="input" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
    </context>
  </template>
</templateSet>